import os
import requests
from dotenv import load_dotenv

# åŠ è½½ç¯å¢ƒå˜é‡
load_dotenv()

class Config:
    STOCK_API_KEY = os.getenv("JUHE_STOCK_KEY")
    BOT_TOKEN = os.getenv("TELEGRAM_API_KEY")
    CHAT_ID = os.getenv("TELEGRAM_CHAT_ID")

def get_cn_stock(gid: str, name: str):
    """ä¿®å¤åçš„Aè‚¡æ•°æ®è·å–ï¼ˆä¸¥æ ¼åŒºåˆ†ä¸ªè‚¡/æŒ‡æ•°ï¼‰"""
    try:
        # åŒºåˆ†è¯·æ±‚ç±»å‹
        is_index = gid in ['sh000001', 'sz399001']
        
        params = {
            "key": Config.STOCK_API_KEY,
            "gid": gid,
            "type": "0" if gid.startswith('sh') else "1" if not is_index else ""
        }

        response = requests.get(
            url="http://web.juhe.cn/finance/stock/hs",
            params=params,
            timeout=15
        )
        data = response.json()
        
        if data.get('error_code') != 0:
            print(f"[{name}] æ¥å£é”™è¯¯: {data.get('reason')}")
            return None

        result = data['result']
        
        # ä¸¥æ ¼åŒºåˆ†æ•°æ®ç»“æ„
        if is_index:
            # æŒ‡æ•°æ•°æ®è§£æ
            return {
                'gid': gid,
                'name': name,
                'price': float(result['nowpri']),
                'change': float(result['increase']),
                'percent': float(result['increPer'])
            }
        else:
            # ä¸ªè‚¡/ETFæ•°æ®è§£æ
            stock_data = result[0]['data']
            return {
                'gid': gid,
                'name': name,
                'price': float(stock_data['nowPri']),
                'change': float(stock_data['increase']),
                'percent': float(stock_data['increPer'])
            }

    except Exception as e:
        print(f"[{name}] å¤„ç†å¼‚å¸¸: {str(e)}")
        return None

# ä¿æŒä¸å˜çš„ç¾è‚¡å‡½æ•°
def get_us_index(gid: str, name: str):
    try:
        response = requests.get(
            url="http://web.juhe.cn/finance/stock/usa",
            params={
                "key": Config.STOCK_API_KEY,
                "gid": gid.lower()
            },
            timeout=15
        )
        data = response.json()
        
        if data.get('error_code') != 0:
            print(f"[{name}] æ¥å£é”™è¯¯: {data.get('reason')}")
            return None

        stock_data = data['result'][0]['data']
        return {
            'gid': gid,
            'name': name,
            'price': float(stock_data['lastestpri'].replace(',', '')),
            'change': float(stock_data['uppic']),
            'percent': float(stock_data['limit'])
        }

    except Exception as e:
        print(f"[{name}] å¤„ç†å¼‚å¸¸: {str(e)}")
    return None

# æ•°æ®æºé…ç½®ï¼ˆä¿æŒä¸å˜ï¼‰
DATA_SOURCES = [
    {'gid': 'sh000001', 'name': 'ä¸Šè¯æŒ‡æ•°'},
    {'gid': 'sz399001', 'name': 'æ·±è¯æˆæŒ‡'},
    {'gid': 'sz300059', 'name': 'ä¸œæ–¹è´¢å¯Œ'},
    {'gid': 'sh512660', 'name': 'å†›å·¥ETF'},   
    {'gid': 'sh688981', 'name': 'ä¸­èŠ¯å›½é™…'},
]

US_INDEXES = [
    {'gid': 'IXIC', 'name': 'çº³æ–¯è¾¾å…‹'},
    {'gid': 'DJI', 'name': 'é“ç¼æ–¯'}
]

# æ ¼å¼åŒ–å‡½æ•°ä¿æŒä¸å˜
def format_change(value: float) -> str:
    if value > 0:
        return f'â–²{abs(value):.2f}'
    elif value < 0:
        return f'â–¼{abs(value):.2f}'
    return 'â”'

def generate_report(data_list):
    """ç”Ÿæˆä¸“ä¸šè¡Œæƒ…æŠ¥å‘Šï¼ˆä¿®æ­£ç‰ˆï¼‰"""
    report = [
        "ğŸ•’ <b>å®æ—¶è¡Œæƒ…æŠ¥å‘Š</b>",
        "â•â•â•â•â•â•â•â•â•â•â•â•â•â•",
        f"<i>* æ•°æ®é‡‡æ ·æ—¶é—´ï¼š{os.popen('date +\"%Y-%m-%d %H:%M:%S\"').read().strip()}</i>\n"
    ]
    
    market_symbols = {
        'ä¸Šè¯æŒ‡æ•°': 'ğŸ‡¨ğŸ‡³ CSI',
        'æ·±è¯æˆæŒ‡': 'ğŸ‡¨ğŸ‡³ SZSE',
        'ä¸œæ–¹è´¢å¯Œ': 'ğŸ“ˆ EASTMONEY',
        'å†›å·¥ETF': 'ğŸ›¡ï¸ DEFENSE',
        'ä¸­èŠ¯å›½é™…': 'ğŸ’» SMIC',
        'çº³æ–¯è¾¾å…‹': 'ğŸŒ NASDAQ',
        'é“ç¼æ–¯': 'ğŸŒ DOW30'
    }
    
    for data in data_list:
        if not data:
            continue
            
        precision = 2
        symbol = market_symbols.get(data['name'], 'ğŸ“Š')
        line = [
            f"{symbol} <b>{data['name']}</b>",
            f"ä»·æ ¼ï¼š<code>{data['price']:,.{precision}f}</code>",
            f"æ¶¨è·Œï¼š{format_change(data['change'])} <b>{data['change']:+.2f}</b>",
            f"å¹…åº¦ï¼š<b>({data['percent']:+.2f}%)</b>",
            "â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€"
        ]
        # ä¿®æ­£åçš„å­—ç¬¦ä¸²è¿æ¥
        report.append("\n".join(line))
    
    report.append("<i>æ•°æ®æºï¼šèšåˆæ•°æ® | æ›´æ–°é¢‘ç‡ï¼š5åˆ†é’Ÿ</i>")
    return "\n".join(report)

def send_telegram(message: str):
    try:
        response = requests.post(
            f"https://api.telegram.org/bot{Config.BOT_TOKEN}/sendMessage",
            json={
                "chat_id": Config.CHAT_ID,
                "text": message,
                "parse_mode": "HTML",
                "disable_web_page_preview": True
            },
            timeout=15
        )
        return response.status_code == 200
    except Exception as e:
        print(f"âŒ æ¶ˆæ¯å‘é€å¤±è´¥: {str(e)}")
        return False

def main():
    cn_data = [get_cn_stock(source['gid'], source['name']) for source in DATA_SOURCES]
    us_data = [get_us_index(source['gid'], source['name']) for source in US_INDEXES]
    valid_data = [d for d in cn_data + us_data if d]
    
    report = generate_report(valid_data)
    if send_telegram(report):
        print("âœ… è¡Œæƒ…æ¨é€æˆåŠŸ")
    else:
        print("âŒ æ¨é€å¤±è´¥ï¼Œè¯·æ£€æŸ¥é…ç½®")

if __name__ == "__main__":
    main()